<hr>
<div class="container">
  <h1 class="text-muted"><%= @sock.name %></h1>
  <div>
  <% stars = 0 %>
  <% @sock.reviews.each do |review| %>
  <% stars += review.stars %>
  <% end %>
  <p> <strong>stars average:</strong> <%= stars = stars / @sock.reviews.count %></p>
  </div>
  <p class=""> <strong>reviews:</strong> <%= @sock.reviews.count %></p>
  <div class="image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path(@sock.photo.key)%>)"></div>
  <h3><%= @sock.price %></h3>
</div>
